<% provide(:title, "Danh sách các tin tức") %>
<p id="notice"><%= notice %></p>

<h1>Reports</h1>

<table border="1">
  <thead>
    <tr>
      <th>Title</th>
      <th>Description</th>
      <th>Picture</th>
      <th>Content</th>
      <th>Keyword</th>
      <th>Hot</th>
      <th>Category</th>
      <th colspan="3">Functions</th>
    </tr>
  </thead>

  <tbody>
    <% @reports.each do |report| %>
      <tr>
        <td><%= report.title %></td>
        <td><%= report.description %></td>
        <td><%= image_tag report.picture_url, width: '100%' if report.picture.present? %></td>
        <td><%= report.content %></td>
        <td><%= report.keyword %></td>
        <td><%= report.hot %></td>
        <td><%= report.category_id %></td>
        <td><%= link_to 'Show', report %></td>
        <td><%= link_to 'Edit', edit_report_path(report) %></td>
        <td><%= link_to 'Destroy', report, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Report', new_report_path %> <br/>
<%= link_to 'Back', categories_path %>
